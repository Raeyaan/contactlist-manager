@using Microsoft.AspNetCore.Mvc
@model Contact
@{
    ViewBag.Title = "Contact Details";
  }



<h3>@ViewBag.Title</h3>
<table class="table table-bordered table-striped">
            <tr>
        <th>Name:</th>
        <td>@(Model.FirstName + " " + Model.LastName)</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone:</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Category:</th>
        <td>@Model.Category.Name</td>
    </tr>
    <tr>
        <th>Date added:</th>
        <td>@Model.Created</td>
    </tr>
</table>
<a asp-controller="Contact" asp-action="Edit"
   asp-route-id="@Model.ContactId"
   asp-route-slug="@Model.Slug"
   class="btn btn-primary">Edit</a>

<a asp-controller="Contact" asp-action="Delete"
   asp-route-id="@Model.ContactId"
   asp-route-slug="@Model.Slug" 
   class="btn btn-primary">
   Delete</a>

<a asp-controller="Home" asp-action="Index"  class="btn btn-primary">Home</a>