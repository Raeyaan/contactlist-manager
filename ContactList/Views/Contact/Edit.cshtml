@model Contact
@{
    string title = ViewBag.Action + " Contact";
    ViewBag.Title = title;

}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control">
    </div>
     <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">select a category</option> 
            @foreach (Category c in ViewBag.Categories)
            {
                <option value= "@c.CategoryId">@c.Name</option>
            }
        </select>
    </div>
    <input type="hidden" asp-for="ContactId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    @{
        if (ViewBag.Referrer == "Add"){
    <a asp-controller="Home" asp-action="Index"  class="btn btn-primary">Cancel</a>
        }
       else{
    <a asp-controller="Contact" asp-action="Detail" asp-route-id="@Model.ContactId"
       asp-route-slug="@Model.Slug" class="btn btn-primary">Cancel</a>
       };
   }
</form>